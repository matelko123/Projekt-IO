             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt_wlasciwy"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="650">

    <Border BorderBrush="Black" BorderThickness="5">
        <DockPanel  Background="Red" >

            <Image Height="80" Width="80" Margin="20,0" Source="https://freeiconshop.com/wp-content/uploads/edd/jpg-solid.png"></Image>
            <TextBlock Background="white" Width="100" Height="20" Margin="10,0">ROZSZERZENIA</TextBlock>
            <TextBlock  Background="White" Width="200" Height="20" Margin="10,0" HorizontalAlignment="Left">Ścieżka</TextBlock>
            <Button Width="100" Height="20"  Margin="35,0" Click="Button_Click">Wybierz</Button>
            <Label Background="AntiqueWhite" Height="30" Width="100" VerticalAlignment="Bottom" Margin="-900,0,0,5">Rozmiar:</Label>
            <Label Background="AntiqueWhite" Height="30" Width="100" VerticalAlignment="Bottom" Margin="-480,0,0,5">Ilość plików:</Label>
        </DockPanel>
    </Border>

</UserControl>
